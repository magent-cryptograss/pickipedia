{
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/StarCitizenWiki/mediawiki-extensions-EmbedVideo.git"
        }
    ],
    "require": {
        "mediawiki/semantic-media-wiki": "~4.2",
        "starcitizenwiki/embedvideo": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "mediawiki/semantic-media-wiki": true
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "extensions/*/composer.json"
            ]
        }
    }
}
